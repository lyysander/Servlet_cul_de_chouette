<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="game.gui.PlayerModel" table="PlayerModel">

        <id name="playerID" column="playerID">
            <generator class="native" />
        </id>

        <property name="playerLogin">
            <column name="login" length="20" not-null="true" />
        </property>

        <property name="playerPassword">
            <column name="password" length="20" not-null="true" />
        </property>

        <property name="playerAge">
            <column name="age" length="11" not-null="true" />
        </property>
        
        <property name="playerSex">
            <column name="sexe" length="20" not-null="true" />
        </property>
        
        <property name="playerCity">
            <column name="ville" length="20" not-null="true" />
        </property>

    </class>
</hibernate-mapping>
